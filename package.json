{
  "name": "groq-desktop-app",
  "version": "1.0.0",
  "description": "A simple Electron app with Groq API integration",
  "main": "electron/main.js",
  "type": "commonjs",
  "packageManager": "pnpm@10.9.0",
  "scripts": {
    "dev": "concurrently \"pnpm dev:vite\" \"`pnpm dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "build:electron": "electron-builder",
    "dist": "pnpm build && pnpm build:electron",
    "dist:mac": "npm build && electron-builder --mac",
    "dist:win": "npm build && electron-builder --win",
    "dist:linux": "p`npm build && electron-builder --linux",
    "test:platforms": "./test-cross-platform.sh",
    "test:paths": "node test-paths.js"
  },
  "keywords": [
    "electron",
    "groq",
    "desktop",
    "chat"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "ansi-to-html": "^0.7.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "electron-json-storage": "^4.6.0",
    "groq-sdk": "0.16.0",
    "lucide-react": "^0.523.0",
    "node-fetch": "^2.6.6",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.3.0",
    "react-syntax-highlighter": "^15.6.1",
    "react-textarea-autosize": "^8.5.9",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwind-scrollbar": "^4.0.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/eslint-parser": "^7.27.0",
    "@babel/preset-react": "^7.26.3",
    "@eslint/js": "^9.25.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "9.1.2",
    "cross-env": "^7.0.3",
    "electron": "37.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.25.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.0.0",
    "postcss": "^8.4.31",
    "prettier": "^3.6.0",
    "tailwindcss": "^3.3.3",
    "vite": "^6.2.6",
    "wait-on": "8.0.3"
  },
  "build": {
    "appId": "com.groq.desktop",
    "productName": "Groq Desktop",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "shared/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "electron/scripts/*.sh",
      "electron/scripts/*.cmd",
      "electron/scripts/*.ps1"
    ],
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Development",
      "icon": "public/icon.png"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
